import "../colors/colors.pkl"

local class KittyRenderer extends ValueRenderer {
    function renderDocument(value: Any) = value
        .toMap()
        .entries
        .map((pair) -> pair.key + " " + pair.value)
        .join("\n")
}

output {
  renderer = new KittyRenderer { }
}

